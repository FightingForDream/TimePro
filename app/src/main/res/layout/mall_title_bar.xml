<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ff3097fd"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_mall_home_scan"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/mall_home_scan" />

    <TextView
        android:id="@+id/tv_mall_search"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="#ffff"
        android:padding="10dp"
        android:clickable="true"
        android:drawableLeft="@drawable/title_bar_search_zoomin"
        android:drawablePadding="5dp"
        android:text="搜索正版电影周边"
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/iv_mall_home_cart_icon"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/mall_home_cart_icon" />
</LinearLayout>