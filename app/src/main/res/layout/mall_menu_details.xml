<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="148dp">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <HorizontalScrollView
            android:id="@+id/view_mall_topic_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fadeScrollbars="false"
            android:scrollbarFadeDuration="0"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_mall_circle_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_circle_icon1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:padding="4dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_circle_icon2"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginRight="30dp"
                    android:padding="4dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_circle_icon3"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginRight="30dp"
                    android:padding="4dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_circle_icon4"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginRight="30dp"
                    android:padding="4dp"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_english_title"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/tv_chinese_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp" />
    <com.atguigu.time.view.NoScrollGridView
        android:id="@+id/mall_no_scroll_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="3"/>
    <RelativeLayout
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/more_product_bg">

        <TextView
            android:scaleType="fitXY"
            android:id="@+id/tv_more_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="2dp"
            android:text="更多商品"
            android:textColor="#FFFFFF" />

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="6dp"
            android:src="@drawable/right_mark" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/order_remind_seperated_region_background" />
</LinearLayout>
