        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray">
    </View>
    <!--功能栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mtime_hot_rank"
            android:textSize="12sp"
            android:background="@color/white"
            android:drawableTop="@drawable/home_entry0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/global_box_office"
            android:textSize="12sp"
            android:background="@color/white"
            android:drawableTop="@drawable/home_entry1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/new_movie_notice"
            android:textSize="12sp"
            android:background="@color/white"
            android:drawableTop="@drawable/home_entry2"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/guess_film"
            android:textSize="12sp"
            android:textColor="@color/light_dark"
            android:background="@color/white"
            android:drawableTop="@drawable/home_entry3"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray">
    </View>
    <!--广告栏-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home_adv"
        android:layout_width="match_parent"
        android:layout_height="130dp">
    </android.support.v4.view.ViewPager>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray">
    </View>
</LinearLayout>