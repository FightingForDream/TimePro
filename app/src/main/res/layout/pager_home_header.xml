            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_shop_item04"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/img_default"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_item05"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="5dp"
            app:layout_heightPercent="40%"
            app:layout_widthPercent="40%"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/ll_item01"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shop_title05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现实闪购"
                android:textColor="#3994D1"/>
            <TextView
                android:id="@+id/tv_shop_item05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现实闪购"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_shop_item05"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/img_default"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_item06"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="5dp"
            app:layout_heightPercent="40%"
            app:layout_widthPercent="60%"
            android:layout_alignTop="@id/ll_item05"
            android:layout_toRightOf="@id/ll_item05"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shop_title06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现实闪购"
                android:textColor="#FF8E8C"/>
            <TextView
                android:id="@+id/tv_shop_item06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现实闪购"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_shop_item06"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/img_default"/>
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_toRightOf="@id/ll_item01">
        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_below="@id/ll_item01">
        </View>
        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            app:layout_widthPercent="60%"
            android:background="@color/gray"
            android:layout_below="@id/ll_item02"
            android:layout_alignLeft="@id/ll_item02">
        </View>
        <View
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            app:layout_heightPercent="30%"
            android:background="@color/gray"
            android:layout_below="@id/ll_item02"
            android:layout_toRightOf="@id/ll_item03">
        </View>
    </android.support.percent.PercentRelativeLayout>
