<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dv_home_gallery_thumbnail"
            android:layout_width="100dp"
            android:layout_height="150dp"
            fresco:placeholderImage="@drawable/img_default"/>
        <TextView
            android:id="@+id/home_gallery_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_alignTop="@id/dv_home_gallery_thumbnail"
            android:layout_alignRight="@id/dv_home_gallery_thumbnail"
            android:background="#3BB0FF"
            android:padding="3dp"/>
        <TextView
            android:id="@+id/home_gallery_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_alignBottom="@id/dv_home_gallery_thumbnail"
            android:layout_alignRight="@id/dv_home_gallery_thumbnail"
            android:background="#659D0E"
            android:padding="3dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_home_gallery_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="12sp"
        android:textColor="#CC000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"/>
    <Button
        android:id="@+id/btn_home_gallery_buy"
        android:layout_width="66dp"
        android:layout_height="28dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/buy_ticket"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/bt_solid_orange_w138_h66"
        android:layout_gravity="center"/>
</LinearLayout>